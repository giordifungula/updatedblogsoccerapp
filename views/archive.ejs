<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Blog Post App</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.2/css/bulma.min.css">

    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.11/summernote-lite.css" rel="stylesheet">
  <!-- <script src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.11/summernote.js"></script> -->

    <link rel="stylesheet" href="/public/css/bootstrap.min.css">
    <link rel="stylesheet" href="public/scss/main.css">
    <link rel="stylesheet" href="/public/stylesheets/style.css">

    <style>
        /* body { padding-top:15px; background-color: #ccc;} */
        img { width: 100%;}

        body {
    font-family: 'Hind', sans-serif;
    background: url('https://images.unsplash.com/photo-1508697371770-529139794f8b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&w=1000&q=80');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center center;
  }
  .panel-heading {
      text-align: center;
      border-bottom: 1px #ccc solid;
  }
  .navbar-brand {
    margin-right:15px;
  }
  
  .logo-brand {
    background: #eee;
    /* padding: 14px 10px 5px 10px; */
    border-radius: 0 0 7px 7px;
    padding: 20px;
  }
  
  a.navbar-item:hover {
    background: transparent;
  }
  
  .is-blue {
    color:#eee !important;
  }
  
  .is-hero-image {
     background-image: url("https://previews.123rf.com/images/efks/efks1503/efks150300027/37691198-soccer-stadium.jpg");
      background-position: center center;
      background-repeat: no-repeat;
      background-attachment: fixed;
      background-size: cover;
      background-color: #999;
  }
  .is-hero-image:before {
      content: '';
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      background-image: linear-gradient(to bottom right,#000000,#eee);
      opacity: .7; 
  }
  
  .tag:not(body).is-light {
      background-color: #f5f5f5;
      color: #ababab;
      font-size: 1em;
  }
  
  
  .hero-footer {
      background: #ffffff;
      padding: 15px;
      z-index: 1;
  }
  
  .tags-search {
      margin:10px 0;
  }
  
  .tabs-subsection a{
      color:#A1A9B3 !important;
  
  }
  .tabs-subsection i {
      padding-right: 5px;
  }

/* //   Register page */
.register {
    max-width: 500px;
    margin: 0 auto !important;
  }
    </style>
</head>
<body>
    <div class="top-section">
        <section class="hero is-primary is-fullheight is-hero-image">
          <!-- Hero head: will stick at the top -->
          <div class="hero-head">
            <nav class="navbar is-transparent">
              <div class="container">
                <div class="navbar-brand">
                  <div class=" logo-brand">
                     Soccer Updates
                  </div>
                  <span class="navbar-burger burger" data-target="navbarMenuHeroA">
                    <span></span>
                    <span></span>
                    <span></span>
                  </span>
                </div>
                <div id="navbarMenuHeroA" class="navbar-menu">
                  <div class="navbar-end">
                    <a class="navbar-item">
                      Login
                    </a>
                    <a class="navbar-item is-blue">
                      Register
                    </a>
                     <a href="/archive" class="navbar-item is-blue" >
                      Archives
                    </a>
                  </div>
                </div>
              </div>
            </nav>
          </div>
        
          <!-- Hero content: will be in the middle -->
          <div class="hero-body">
            <div class="container">
              <div class="columns">
                <div class="column is-6">
                  <h1 class="title is-1">
                    Soccer Blog Post
                  </h1>
                  <div class="tags-search">
                    <span class="tag is-rounded is-light">Football News</span>
                     <span class="tag is-rounded is-light">Football Gossip</span>
                    <span class="tag is-rounded is-light">Football Infomation</span>
        
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
        </div>
    <div class="containe">
        <% if (title) { %>
            <h2 class="center"><%= title %></h2>
        <% } %>
        <div class="panel panel-danger">
            <div class="panel panel-heading text-center panel-danger">
                <h1 class="center">Soccer Blog Posts</h1>
            </div>
            <div class="panel-body" id="all">

                <% if (message) { %>
                    <div class="alert alert-success" role="alert">
                        <%= message %>
                    </div>
                <% } %> 

                <a href="/create">
                    <div class="col-xs-6 col-md-2">
                        <div class="panel panel-default">
                            <div class="panel-body">
                                <img src="https://png.icons8.com/ios/1600/add.png">
                            </div>
                            <div class="panel-footer">
                                New Post
                            </div>
                        </div>
                    </div> 
                </a>

                <% pokemon.pokemon.forEach(function(poke){ %>
                    <a href="/view/<%-poke.id %>">
                        <div class="col-md-3 col-md-4">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h5><%-poke.author %></h5>
                                </div>
                                <div class="panel-body">
                                    <img src="<%-poke.image %>">
                                </div>
                                <div class="panel-footer">
                                    <h4><%-poke.title %></h4>
                                </div>
                                <div class="panel-footer">
                                    <!-- <div class="summernote"></div> -->
                                    <div class="summernote" name="content"><p><%-poke.content %></p></div>
                                    <!-- <textarea class="summernote" name="content"><p><%-poke.content %></p></textarea> <br> -->
                                    <button id="edit" class="btn btn-primary" onclick="edit()" type="button">Edit</button>
                                    <button id="save" class="btn btn-primary" onclick="save()" type="button">Save</button>
                                </div>
                                
                            </div>
                        </div> 
                    </a>
                <% }); %>   

            </div>
            
        </div>
    </div>
    <div class="panel-footer text-center">
            <p>All rights reserved 2019 | Giordi .</p>
        </div>

    <script src="http://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.js"></script> 
    <script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.11/summernote-lite.js"></script>  
    
    <!-- <script src="http://cdnjs.cloudflare.com/ajax/libs/summernote/0.8.11/summernote.js"></script> -->

    <script>
        var edit = function() {
    $('.summernote').summernote({focus: true});
    };
    var save = function() {
    var markup = $('.summernote').summernote('code');
    $('.summernote').summernote('destroy');
    };
    $(document).ready(function() {
        // $('.summernote').summernote();
        
    });
  </script>
    </script>
</body>
</html>